alias cd.work="cd ${WORK_DIR}"

# svn
alias svn.update="svn update --username=adrian.siminciuc"
alias svn.commit="svn commit --username=adrian.siminciuc"
alias svn.revert="svn revert --recursive --non-interactive --username=adrian.siminciuc"

#java
